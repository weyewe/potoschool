<div class="hero-unit">
  <h2>Sign In </h2>
  <p>
    Enter your email and password.
  </p>
  
  <%= form_for(resource, :as => resource_name,  :html=>{:class =>"form-horizontal"}, 
        :url => session_path(resource_name)) do |f| %>
        
        
        <div class="control-group">
          <%= f.label :login, "Email" %>
          <div class="controls">
            <%= f.email_field :login, :class=>"input-xlarge", :type => "text" %>
            <p class="help-block">Enter your employee email</p>
          </div>
        </div>
        
        <div class="control-group">
          <%= f.label :password, "Password" %>
          <!-- <label for="input01" class="control-label">Text input</label> -->
          <div class="controls">
            <%= f.password_field :password, :class=>"input-xlarge" %>
            <!-- <input type="text" id="input01" class="input-xlarge"> -->
            <p class="help-block">Enter your password.</p>
          </div>
        </div>
        

        <div class="form-actions">
          <button class="btn btn-primary" type="submit">Save changes</button>
        </div>
  <% end %>
  
  
  
        
        
