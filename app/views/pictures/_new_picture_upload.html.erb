<%= form_for @new_picture, :url => project_submission_pictures_url(@project_submission) , 
          :html => {:class=> "well form-search",
            :id => 'upload_picture' }  do |f| %>
  <%= hidden_field_tag 'is_original', 
          ORIGINAL_PICTURE  %>
  <% tranloadit_array = transloadit_with_max_size('potoschool_store_image', 1) %>
  <%= hidden_field_tag 'picture_filetype', 
          PICTURE_FILETYPE[:image]  %>
  <%#= transloadit :potoschool_store_image, { :auth => {:max_size => 2000}}  %>
  <%= hidden_field_tag 'params',  tranloadit_array[0]  %>
  <%= hidden_field_tag 'signature',  tranloadit_array[1]  %>
          
  <%#= f.file_field :original_image_url, :class => "input-medium search-query transloadit-input" , 
            :multiple => "multiple", :style=>"width:200px;" %>
  <%= f.file_field :original_image_url, :class => "input-medium search-query transloadit-input" , 
             :style=>"width:200px;" %>
            <br />
            <br />
            
            <!-- params    = Transloadit::Rails::Engine.template(template, options).to_json -->
            
            
  <button type="submit" class=" hide btn submit-button">Upload</button>
  <p class="help">You can upload  images one by one.</p>
  <p class="help feedback">
    If your image file size is bigger than <b>1 MB</b>,
    you can resize it by using Photoshop or other image editing file.<br />
    Here is the tutorial to resize image using Photoshop: <%= link_to "CLICK HERE", 
    "http://s3.amazonaws.com/potoschool_icon/TUTORIAL+PHOTO+RESIZE.pdf" %>
  </p>

<% end %>