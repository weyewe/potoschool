<%= form_for Comment.new  ,:url => picture_comments_url(@course), 
        :html => {:class => "form-horizontal ajaxform", :style => "display:none;"} do |f| %>
  <div class="control-group">
    <%= f.label :body, "New feedback" %>
    <div class="controls">
      <%= f.text_area :body, :class=>"input-xlarge comment_body", :rows => 5 %>
      <!-- <p class="help-block">Masukkan kode kelas.</p> -->
    </div>
  </div>
  
  
  
  <div class="form-actions">
    <button class="btn btn-primary" type="submit">Create Feedback</button>
    <button id="cancel-non-positional-comment" class="btn">Cancel</button>
  </div>
<% end %>