
<li class="span3">
  <div class="thumbnail">
    
    <%# if not project_submission.approved? %>
      <%#= link_to  grade_project_submission_picture_path( original_picture),
       :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%#= image_tag original_picture.index_image_url %>
      <%# end %>
    <%# else %>
      <%#= link_to  grade_project_submission_picture_path( project_submission.approved_picture),
       :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%#= image_tag project_submission.approved_picture.index_image_url %>
      <%# end %>
    <%# end %>
    
    <% if not original_picture.any_picture_submission_approved? %>
      <%= link_to  grade_project_submission_picture_path( original_picture.last_revision),
       :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%= image_tag original_picture.last_revision.index_image_url %>
      <% end %>
    <% else %>
      <%= link_to  grade_project_submission_picture_path( original_picture.approved_picture),
       :class => "thumbnail" , :style => "height:160px; overflow:hidden;" do %>
        <%= image_tag original_picture.approved_picture.index_image_url %>
      <% end %>
    <% end %>
    
    
    <!-- <img alt="" src="http://placehold.it/260x180"> -->
    <div class="caption">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        
        <tbody>
          <tr>
            <td>Revisions</td>
            <td><%= original_picture.revisions.count %></td>
          </tr>
          <tr>
            <td>Approved</td>
            <% if original_picture.any_picture_submission_approved? %>
              <td>YES</td>
            <% else %>
              <td>Pending</td>
            <% end %>
            
          </tr>



        </tbody>
      </table>
      <p><a class="btn btn-primary" href="#">See Details</a></p>
    </div>
  </div>
</li>

