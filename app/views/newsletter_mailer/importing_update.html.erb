    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
   
    
    

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="<%=asset_path "favicon.ico"%>">
    <link rel="apple-touch-icon" href="http://twitter.github.com/bootstrap/examples/images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="http://twitter.github.com/bootstrap/examples/images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="http://twitter.github.com/bootstrap/examples/images/apple-touch-icon-114x114.png">
  
    <%#= stylesheet_link_tag    "application" %>
    <%#= yield :additional_css %>
</head>
<body>
  
  
  
  <div class="container">
    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
      <h1>potoSchool Updates</h1>
    </div>
    
    <p>
      Tutorial untuk menggunakan potoSchool dapat didownload dari link berikut ini: <a href="<%= POTOSCHOOL_TUTORIAL_URL %>"> CLICK HERE </a>.
    </p>

    <!-- Example row of columns -->
    <div class="row">
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>NIM</th>
            <th>Course</th>
            <th>Subject</th>
            <th>Reason</th>
          </tr>
        </thead>
        <tbody>
          <% @failed_registrations.each do |fail_reg| %>
            <tr>
              <td><%= fail_reg.name %></td>
              <td><%= fail_reg.email %></td>
              <td><%= fail_reg.nim %></td>
              <td><%= fail_reg.course_name %></td>
              <td><%= fail_reg.subject_name %></td>
              <td><%= fail_reg.reason %></td>
            </tr>
          <% end %>
          
  
        </tbody>
      </table>
      
    
      
    </div>
    <hr />
    
 
    
    <footer>
      <p>&copy; poto 2011 - <%= Time.now.year %></p>
    </footer>

  </div>

</body>
</html>


