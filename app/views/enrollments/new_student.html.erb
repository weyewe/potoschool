
<div class="span9 content">
  <%= create_guide("New Student", 
        "Create new student by filling out the details.").html_safe %>
  

  
  <div class="row-fluid">
    <div class="span8">
      <%= render :partial => "new_enrollment_form", :locals => {
        :title => "New Student", 
        :role_id => Role.find_by_name(ROLE_NAME[:student]).id ,
        :new_enrollment => @new_enrollment,
        :agent => "student"
      }%>
      
      
      

    </div><!--/span-->

    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th colspan="2">Statistics</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Total Students</td>
            <td><%= current_user.get_managed_school.students.count %></td>
          </tr>
          <tr>
            <td>Total Teachers</td>
            <td><%= current_user.get_managed_school.teachers.count %></td>
          </tr>
        </tbody>
      </table>
     
    </div><!--/span-->
    
  </div><!--/row-->

</div><!--/span-->
