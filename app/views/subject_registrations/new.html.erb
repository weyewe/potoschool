
<div class="span9 content">
  
  <%= create_guide("Subject registration", 
        "Register student to the subject. ").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <h3>Total Teachers: 3</h3>
  <hr />
  
  
  <div class="row-fluid">
    <!-- <div class="span12"> -->
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Student ID</th>
            <th>Subjects Taken</th>
            <th>Assign Subject</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <%= render :partial => "subject_registrations/subject_registration_entry", :locals => {
              :student => student,
              :subject => @subject 
            }%>
    
          <% end %>


         
        </tbody>
      </table>
      
      <div class=" hidden" id="checkbox_form_wrapper">
        <%= form_for SubjectRegistration.new, 
              :url =>subject_subject_registrations_url(@subject)   do |f| %>
          <%= hidden_field_tag 'membership_provider' , ''  %>
          <%= hidden_field_tag 'membership_consumer', '' %>
          <%= hidden_field_tag 'membership_decision', '' %>
        <% end %>
      </div>
      
      
      
    <!-- </div> -->   <!--/span12-->
  </div><!--/row-->

</div><!--/span-->

<%# content_for :additional_js  do %>
 
  <%#= javascript_include_tag "DT.js" %> 
  <%#= javascript_include_tag "DT_bootstrap.js" %> 
<%# end %>










