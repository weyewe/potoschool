
<div class="span9 content">
  
  <%= create_guide("Subject registration", 
        "Register student to the subject. ").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <h3>Total Teachers: 3</h3>
  <hr />
  
  
  <div class="row-fluid">
    <!-- <div class="span12"> -->
      
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr>
            <th>Student ID</th>
            <th>Subjects Taken</th>
            <th>Assign Subject</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= "xxx"  %></td>
              <td><%=  student.subject_registrations.count %></td>
              
              <td class="well">
                <label class="checkbox">
                  <% checkbox_value = student.is_subject_registered?(@subject) %>
                  <%= check_box_tag 'is_checked', get_checkbox_value(checkbox_value )   , 
                      checkbox_value, :class => 'is_checked_class', 
                      :id => "studentId_#{student.id}" %> Assign
                </label>

              </td>
            </tr>
          <% end %>


         
        </tbody>
      </table>
      
      <div class="alert alert-success allert-message">
                <a class="close" href="#">&times;</a>
                <strong>Well done!</strong> You successfully read this important alert message.
              </div>

      
      <div class="form-actions">
        <%= hidden_field_tag 'destination_url', 
                subject_subject_registrations_url(@subject) ,
                 :id => "destination_url" %>

        <button class="btn btn-large btn-primary"
              type="submit" id="save_button">Save changes</button>
      </div>


      
      
      
    <!-- </div> -->   <!--/span12-->
  </div><!--/row-->

</div><!--/span-->

<%# content_for :additional_js  do %>
 
  <%#= javascript_include_tag "DT.js" %> 
  <%#= javascript_include_tag "DT_bootstrap.js" %> 
<%# end %>










